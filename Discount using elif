#discount
bill=int(input("enter amount"))
if bill<1000:
       Print("paid bill is ",bill)
elif 1000<=bill<2000:
       Print("total bill is", bill)
       discount=(int(input("enter discount percentage:")
       Output=bill-(bill*discount/100)
       Print("total bill paid is ",output)

elif 2000<=bill<3000:
       Print("total bill is", bill)
       discount=(int(input("enter discount percentage:")
       Output=bill-(bill*discount/100)
       Print("total bill paid is ",output)

    
elif 3000<=bill<5000:
       Print("total bill is", bill)
       discount=(int(input("enter discount percentage:")
       Output=bill-(bill*discount/100)
       Print("total bill paid is ",output)
elif bill>=5000:
       Print("total bill is", bill)
       discount=(int(input("enter discount percentage:")
       Output=bill-(bill*discount/100)
       Print("total bill paid is ",output)

